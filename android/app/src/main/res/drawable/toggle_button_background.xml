<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C"/> <!-- Daha koyu yeşil (basılı) -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#4CAF50"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F"/> <!-- Kırmızı (aktif/durdur) -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#FF5252"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Normal yeşil -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#81C784"/>
        </shape>
    </item>
</selector>
